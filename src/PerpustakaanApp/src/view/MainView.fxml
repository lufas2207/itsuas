<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController"
            prefWidth="500" prefHeight="300" style="-fx-background-color: #f0f4f7;">
    <children>
        <Label layoutX="20" layoutY="20" text="Masuk sebagai: Admin"
               style="-fx-font-weight: bold; -fx-font-size: 14px;" />

        <Label layoutX="20" layoutY="50" text="Selamat Datang di Aplikasi Perpustakaan"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <VBox layoutX="160" layoutY="100" spacing="15">
            <Button text="Manajemen Buku" onAction="#handleBuku"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;"/>
            <Button text="Manajemen Anggota" onAction="#handleAnggota"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;"/>
            <Button text="Peminjaman Buku" onAction="#handlePeminjaman"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;"/>
        </VBox>

        <!-- Tombol Logout di kanan atas -->
        <Button layoutX="400" layoutY="20" text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </children>
</AnchorPane>
