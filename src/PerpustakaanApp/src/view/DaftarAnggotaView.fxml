<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.DaftarAnggotaController"
            prefWidth="300" prefHeight="400" style="-fx-background-color: #f5f6fa;">
    <children>
        <VBox spacing="10" layoutX="50" layoutY="20">
            <Label text="Form Pendaftaran Anggota" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

            <TextField fx:id="tfID" promptText="ID Anggota" />
            <TextField fx:id="tfNama" promptText="Nama Lengkap" />
            <TextField fx:id="tfAlamat" promptText="Alamat" />
            <TextField fx:id="tfHP" promptText="Nomor HP" />
            <PasswordField fx:id="pfPassword" promptText="Password" />

            <HBox spacing="10">
                <Button text="Daftar" onAction="#handleDaftar"
                        style="-fx-background-color: #3e8dc2; -fx-text-fill: white;" />
                <Button text="Batal" onAction="#handleBatal"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
